<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/interface_white</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="MainContent">
        <item name="android:textColor">@color/interface_white</item>
        <item name="android:textSize">13dp</item>

    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/interface_white</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="CheckInput">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/interface_white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColorHint">@color/interface_gray</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="ExcelInput">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/interface_white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColorHint">@color/interface_gray</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="GrayText">
        <item name="android:textColor">@color/interface_gray</item>
    </style>

    <style name="NavigationImage">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="NavigationText">
        <item name="android:textColor">@color/inteface_icon_white</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>

    <style name="NoticeTitleText">
        <item name="android:hint">제목을 입력해주세요</item>
        <item name="android:textColorHint">@color/interface_gray</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="singleLine">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/interface_white</item>
    </style>

    <style name="NoticeContentText">
        <item name="android:hint">내용을 입력해주세요</item>
        <item name="android:textColorHint">@color/interface_gray</item>
        <item name="android:layout_margin">12dp</item>
        <item name="singleLine">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/interface_white</item>

    </style>

    <style name="AttendanceInfoText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/interface_white</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColorPrimary">@color/interface_white</item>
        <item name="android:colorControlNormal">@color/interface_purple</item>
    </style>

</resources>